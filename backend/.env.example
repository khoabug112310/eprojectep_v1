APP_NAME="CineBook"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE="Asia/Ho_Chi_Minh"

APP_LOCALE=vi
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=vi_VN

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=8080
DB_DATABASE=cinebook_local
DB_USERNAME=root
DB_PASSWORD=

# Database Connection Pool Settings (Production)
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=30
DB_POOL_TIMEOUT=10
DB_POOL_IDLE_TIMEOUT=600
DB_POOL_MAX_LIFETIME=7200

# Database Connection Settings
DB_TIMEOUT=30
DB_PERSISTENT=false
DB_COMPRESS=false
DB_SSL_VERIFY=true

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_STORE=redis
CACHE_PREFIX="cinebook_cache"

MEMCACHED_HOST=127.0.0.1

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Redis Connection Pool Settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=20
REDIS_POOL_WAIT=3.0
REDIS_TIMEOUT=5.0
REDIS_READ_TIMEOUT=5.0
REDIS_TCP_KEEPALIVE=true
REDIS_RETRY_INTERVAL=100
REDIS_MAX_RETRIES=3
REDIS_PERSISTENT=true
REDIS_SERIALIZER=php
REDIS_COMPRESSION=none

# =============================================================================
# SEAT LOCKING CONFIGURATION
# =============================================================================
SEAT_LOCK_TTL=900
SEAT_LOCK_CLEANUP_INTERVAL=300
SEAT_LOCK_KEY_PREFIX=seat_lock
SEAT_LOCK_MAX_SEATS=10
SEAT_LOCK_RETRY_ATTEMPTS=3
SEAT_LOCK_RETRY_DELAY=100


# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis
QUEUE_RETRY_AFTER=90
QUEUE_MAX_JOBS=1000
QUEUE_TIMEOUT=60

# =============================================================================
# FILESYSTEM CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# AWS S3 Configuration (for production file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@cinebook.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
THROTTLE_AUTH_ATTEMPTS=5
THROTTLE_AUTH_DECAY=60
THROTTLE_BOOKING_ATTEMPTS=20
THROTTLE_BOOKING_DECAY=60
THROTTLE_API_ATTEMPTS=60
THROTTLE_API_DECAY=1

# CSRF Protection
CSRF_COOKIE_SECURE=false
CSRF_COOKIE_SAMESITE=lax

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# Input Sanitization
SANITIZE_INPUT=true
SANITIZE_HTML=true

# File Upload Security
UPLOAD_MAX_SIZE=2048
UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,gif,webp"
UPLOAD_SCAN_VIRUSES=false
UPLOAD_QUARANTINE_PATH="storage/quarantine"

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
PAYMENT_GATEWAY=dummy
PAYMENT_TIMEOUT=300
PAYMENT_CURRENCY=VND
PAYMENT_TEST_MODE=true

# Dummy Payment Gateway (for development)
DUMMY_PAYMENT_SUCCESS_RATE=95
DUMMY_PAYMENT_DELAY=2

# Real Payment Gateway (for production)
# VNPAY_TMN_CODE=
# VNPAY_HASH_SECRET=
# VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# =============================================================================
# E-TICKET CONFIGURATION
# =============================================================================
TICKET_QR_SIZE=200
TICKET_QR_MARGIN=4
TICKET_TEMPLATE=default
TICKET_LOGO_PATH="images/logo.png"
TICKET_EXPIRES_HOURS=2

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_CHANNELS="mail,database"
NOTIFICATION_QUEUE=notifications
REMINDER_HOURS_BEFORE=2
REMINDER_ENABLED=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
MONITORING_ENABLED=false
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300

# Error Tracking (Sentry, Bugsnag, etc.)
ERROR_TRACKING_DSN=
ERROR_TRACKING_ENVIRONMENT="${APP_ENV}"

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=
ANALYTICS_TRACKING_ID=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1
API_PAGINATE_DEFAULT=15
API_PAGINATE_MAX=100

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"
CORS_ALLOWED_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="*"
CORS_EXPOSED_HEADERS=""
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=true

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}/api"
VITE_APP_ENV="${APP_ENV}"

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true
CLOCKWORK_ENABLED=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE=cinebook_test
TEST_REDIS_DB=15
TEST_MAIL_DRIVER=array
TEST_QUEUE_DRIVER=sync

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================
# These should be set differently in production
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://your-domain.com
# DB_PASSWORD=your-secure-database-password
# REDIS_PASSWORD=your-secure-redis-password
# MAIL_PASSWORD=your-secure-mail-password
# CSRF_COOKIE_SECURE=true
# SESSION_SECURE_COOKIE=true
