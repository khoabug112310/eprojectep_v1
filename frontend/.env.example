# CineBook Frontend Environment Configuration
# Copy this file to .env and .env.local for development

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================

# Application Name
VITE_APP_NAME=\"CineBook\"

# Application Version
VITE_APP_VERSION=\"1.0.0\"

# Environment (development, staging, production)
VITE_ENVIRONMENT=\"development\"

# Base URL for the application
VITE_BASE_URL=\"http://localhost:5173\"

# =================================================================
# API CONFIGURATION
# =================================================================

# Backend API Base URL
VITE_API_URL=\"http://localhost:8000\"

# WebSocket Server URL
VITE_WEBSOCKET_URL=\"ws://localhost:8080\"

# API Timeout (milliseconds)
VITE_API_TIMEOUT=\"10000\"

# =================================================================
# PAYMENT GATEWAY CONFIGURATION
# =================================================================

# VNPay Configuration
VITE_VNPAY_TMN_CODE=\"your_vnpay_tmn_code\"
VITE_VNPAY_HASH_SECRET=\"your_vnpay_hash_secret\"
VITE_VNPAY_URL=\"https://sandbox.vnpayment.vn/paymentv2/vpcpay.html\"
VITE_VNPAY_RETURN_URL=\"http://localhost:5173/payment/return\"

# MoMo Configuration (for future implementation)
VITE_MOMO_PARTNER_CODE=\"your_momo_partner_code\"
VITE_MOMO_ACCESS_KEY=\"your_momo_access_key\"
VITE_MOMO_SECRET_KEY=\"your_momo_secret_key\"
VITE_MOMO_ENDPOINT=\"https://test-payment.momo.vn/gw_payment/transactionProcessor\"

# =================================================================
# ERROR TRACKING & MONITORING
# =================================================================

# Error Tracking Service URL
VITE_ERROR_TRACKING_URL=\"https://your-error-tracking-service.com/api/errors\"

# Enable/Disable Error Tracking
VITE_ERROR_TRACKING_ENABLED=\"true\"

# Sentry DSN (if using Sentry)
VITE_SENTRY_DSN=\"your_sentry_dsn\"

# LogRocket App ID (if using LogRocket)
VITE_LOGROCKET_APP_ID=\"your_logrocket_app_id\"

# =================================================================
# PWA CONFIGURATION
# =================================================================

# Enable PWA Features
VITE_PWA_ENABLED=\"true\"

# VAPID Public Key for Push Notifications
VITE_VAPID_PUBLIC_KEY=\"your_vapid_public_key\"

# PWA Update Check Interval (milliseconds)
VITE_PWA_UPDATE_INTERVAL=\"300000\"

# =================================================================
# ANALYTICS & TRACKING
# =================================================================

# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=\"G-XXXXXXXXXX\"

# Facebook Pixel ID
VITE_FB_PIXEL_ID=\"your_facebook_pixel_id\"

# Hotjar Site ID
VITE_HOTJAR_SITE_ID=\"your_hotjar_site_id\"

# =================================================================
# SOCIAL AUTHENTICATION
# =================================================================

# Google OAuth Client ID
VITE_GOOGLE_CLIENT_ID=\"your_google_client_id\"

# Facebook App ID
VITE_FACEBOOK_APP_ID=\"your_facebook_app_id\"

# =================================================================
# FEATURE FLAGS
# =================================================================

# Enable/Disable specific features
VITE_FEATURE_WEBSOCKET=\"true\"
VITE_FEATURE_PUSH_NOTIFICATIONS=\"true\"
VITE_FEATURE_OFFLINE_MODE=\"true\"
VITE_FEATURE_SOCIAL_LOGIN=\"false\"
VITE_FEATURE_ADVANCED_ANALYTICS=\"false\"
VITE_FEATURE_A_B_TESTING=\"false\"

# =================================================================
# PERFORMANCE & OPTIMIZATION
# =================================================================

# Enable Service Worker
VITE_SERVICE_WORKER_ENABLED=\"true\"

# Cache Strategy (cache-first, network-first, stale-while-revalidate)
VITE_CACHE_STRATEGY=\"stale-while-revalidate\"

# Image Optimization
VITE_IMAGE_OPTIMIZATION=\"true\"
VITE_IMAGE_CDN_URL=\"https://your-image-cdn.com\"

# =================================================================
# SECURITY
# =================================================================

# Enable Content Security Policy
VITE_CSP_ENABLED=\"true\"

# CORS Configuration
VITE_CORS_ORIGINS=\"http://localhost:3000,http://localhost:5173\"

# JWT Secret (for development only - use secure random string in production)
VITE_JWT_SECRET=\"your_jwt_secret_for_development\"

# =================================================================
# EMAIL CONFIGURATION
# =================================================================

# Email Service Provider
VITE_EMAIL_PROVIDER=\"smtp\"

# SMTP Configuration
VITE_SMTP_HOST=\"smtp.gmail.com\"
VITE_SMTP_PORT=\"587\"
VITE_SMTP_USER=\"your_email@gmail.com\"
VITE_SMTP_PASS=\"your_app_password\"

# SendGrid API Key (alternative to SMTP)
VITE_SENDGRID_API_KEY=\"your_sendgrid_api_key\"

# =================================================================
# DEVELOPMENT TOOLS
# =================================================================

# Enable Debug Mode
VITE_DEBUG=\"true\"

# Enable Redux DevTools
VITE_REDUX_DEVTOOLS=\"true\"

# Enable React DevTools
VITE_REACT_DEVTOOLS=\"true\"

# Mock API Responses
VITE_MOCK_API=\"false\"

# =================================================================
# TESTING
# =================================================================

# Test Database URL
VITE_TEST_DATABASE_URL=\"sqlite://test.db\"

# Playwright Test Configuration
VITE_E2E_BASE_URL=\"http://localhost:5173\"
VITE_E2E_HEADLESS=\"true\"

# =================================================================
# DEPLOYMENT
# =================================================================

# Build Output Directory
VITE_BUILD_PATH=\"dist\"

# Static Assets URL
VITE_ASSETS_URL=\"/assets\"

# CDN URL for Static Assets
VITE_CDN_URL=\"https://your-cdn.com\"

# =================================================================
# THIRD-PARTY SERVICES
# =================================================================

# Map Service (Google Maps, OpenStreetMap)
VITE_MAP_PROVIDER=\"google\"
VITE_GOOGLE_MAPS_API_KEY=\"your_google_maps_api_key\"

# Weather Service (for location-based features)
VITE_WEATHER_API_KEY=\"your_weather_api_key\"

# Payment Gateway Test Mode
VITE_PAYMENT_TEST_MODE=\"true\"

# =================================================================
# ACCESSIBILITY
# =================================================================

# Default Accessibility Settings
VITE_A11Y_HIGH_CONTRAST=\"false\"
VITE_A11Y_REDUCED_MOTION=\"false\"
VITE_A11Y_FONT_SIZE=\"medium\"
VITE_A11Y_SCREEN_READER=\"false\"

# =================================================================
# PERFORMANCE MONITORING
# =================================================================

# Web Vitals Tracking
VITE_WEB_VITALS_ENABLED=\"true\"

# Performance Budget (milliseconds)
VITE_PERFORMANCE_BUDGET_FCP=\"1800\"
VITE_PERFORMANCE_BUDGET_LCP=\"2500\"
VITE_PERFORMANCE_BUDGET_FID=\"100\"
VITE_PERFORMANCE_BUDGET_CLS=\"0.1\"

# Bundle Size Budget (KB)
VITE_BUNDLE_SIZE_BUDGET=\"512\"

# =================================================================
# LOCALIZATION
# =================================================================

# Default Language
VITE_DEFAULT_LOCALE=\"vi\"

# Supported Languages
VITE_SUPPORTED_LOCALES=\"vi,en\"

# Translation Service
VITE_TRANSLATION_SERVICE=\"i18next\"

# =================================================================
# CONTENT DELIVERY
# =================================================================

# Movie Poster CDN
VITE_POSTER_CDN=\"https://image.tmdb.org/t/p/w500\"

# Video Streaming CDN
VITE_VIDEO_CDN=\"https://your-video-cdn.com\"

# Static Content CDN
VITE_STATIC_CDN=\"https://your-static-cdn.com\"

# =================================================================
# CINEMA INTEGRATION
# =================================================================

# Cinema Management System API
VITE_CINEMA_API_URL=\"https://api.cinema-system.com\"
VITE_CINEMA_API_KEY=\"your_cinema_api_key\"

# Ticket Validation Service
VITE_TICKET_VALIDATION_URL=\"https://api.ticket-validation.com\"

# =================================================================
# BACKUP & RECOVERY
# =================================================================

# Database Backup Service
VITE_BACKUP_SERVICE_URL=\"https://backup-service.com\"
VITE_BACKUP_INTERVAL=\"daily\"

# =================================================================
# COMPLIANCE
# =================================================================

# GDPR Compliance
VITE_GDPR_ENABLED=\"true\"

# Cookie Consent
VITE_COOKIE_CONSENT_REQUIRED=\"true\"

# Data Retention Period (days)
VITE_DATA_RETENTION_PERIOD=\"365\"

# =================================================================
# MAINTENANCE
# =================================================================

# Maintenance Mode
VITE_MAINTENANCE_MODE=\"false\"

# Maintenance Message
VITE_MAINTENANCE_MESSAGE=\"CineBook is temporarily unavailable for maintenance. Please check back soon.\"

# Health Check Endpoint
VITE_HEALTH_CHECK_URL=\"/api/health\""