# CineBook Environment Configuration Template
# Copy to .env and customize for your deployment

# Application Settings
APP_NAME=CineBook
ENVIRONMENT=production
APP_VERSION=1.0.0
APP_DEBUG=false

# Domain Configuration
FRONTEND_DOMAIN=cinebook.com
API_DOMAIN=api.cinebook.com
TRAEFIK_DOMAIN=traefik.cinebook.com

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
DB_PORT=3306
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Frontend Environment Variables
VITE_API_BASE_URL=https://api.cinebook.com
VITE_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0
VITE_ERROR_TRACKING_ENABLED=true
VITE_WEBSOCKET_URL=wss://api.cinebook.com
VITE_PAYMENT_GATEWAY_URL=https://api.cinebook.com/api/payments

# Backend Configuration
APP_URL=https://api.cinebook.com
APP_KEY=base64:GENERATE_NEW_KEY_HERE

# Database Configuration
DB_DATABASE=cinebook
DB_USERNAME=cinebook
DB_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
DB_ROOT_PASSWORD=GENERATE_STRONG_ROOT_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=GENERATE_REDIS_PASSWORD_HERE

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls

# SSL/ACME Configuration
ACME_EMAIL=admin@cinebook.com

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=GENERATE_GRAFANA_PASSWORD_HERE

# Security Settings
ERROR_TRACKING_ENABLED=true
BUILD_TARGET=production

# Development Override (for docker-compose.override.yml)
# DB_HOST=localhost
# REDIS_HOST=localhost
# MAIL_MAILER=log